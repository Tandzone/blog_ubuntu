<%= form_for([@article, @article.comments.new]) do |f| %>
    <% if false %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label "leave a comment" %><br>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Add' %>
    </div>
<% end %>